<Page x:Class="Guidance.GUI.FlashCardEditorPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Guidance.GUI"
      xmlns:vm="clr-namespace:Guidance.ViewModel"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="FlashCardEditorPage">
    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="10*"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="10*"/>
                <RowDefinition />
            </Grid.RowDefinitions>
            <DataGrid Name="showFlashCardsDataGrid" AutoGenerateColumns="False" IsReadOnly="True"
                      SelectedItem="{Binding SelectedFlashCard}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Tytuł" Binding="{Binding Title}" />
                    <DataGridTextColumn Header="Data utworzenia" Binding="{Binding CreationDate}" />
                    <DataGridTextColumn Header="Data ostatniego przywołania" Binding="{Binding LastOccurance}" />
                </DataGrid.Columns>
            </DataGrid>
            <Grid Grid.Column="0" Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Button x:Name="AddFlashCardButton" Content="Dodaj" Grid.Column="0" Margin="10" Click="AddFlashCardButton_Click"/>
                <Button Name="EditFlashCardButton" Content="Edytuj" Grid.Column="1" Margin="10" Click="EditFlashCardButton_Click"/>
                <Button Content="Usuń" Grid.Column="2" Margin="10" Click="DeleteFlashCardButton_Click" Command="{Binding DeleteSelectedFlashCardCommand}"/>
            </Grid>
            <Grid Grid.Column="1">
                <StackPanel Orientation="Vertical">
                    <Button Click="test1" >
                        Rozpocznij test
                    </Button>
                    <Button>
                        
                    </Button>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Page>
